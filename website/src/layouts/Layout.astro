---
import '../scss/app.scss';

interface Props {
	title: string;
}

const { title } = Astro.props;
---

<!DOCTYPE html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="CmdPalette - A Command Palette for your website or web app">
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/png" href="/cmdPaletteLogo.png" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>

		<script data-goatcounter="https://cmdpalette.goatcounter.com/count" async src="//gc.zgo.at/count.js"></script>
	</head>
	<body>
		<slot />
	</body>
</html>